<!DOCTYPE html>
<html>
  <head>
    <title>Edit Profile | Handprint</title>
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro" rel="stylesheet">
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <link rel="stylesheet" href="/stylesheets/base.css" />
    <link rel="stylesheet" href="/stylesheets/dashboard.css" />
    <link rel="shortcut icon" href="/favicon.png" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="/js/main.js"></script>
    <script src="/js/edit-profile.js"></script>
  </head>
  <body>

    <!--{{>navbar}}-->
    <nav> 
    <!-- Logo -->
    <div class="logo">
      <a href="/"><img src="/images/logo-white.png"></a>
    </div>

    <!-- Search -->
    <form name="search" method="POST" action="/search">
      <div class="search">
        <img src="/images/search-white.png">
        <input class="input-search" name="searchItem" placeholder="Search for users and organizations">
      </div>
    </form>

    {{#if account}}
    <div class="links">
      <div><a href="/dashboard">dashboard</a></div>
      <a href="/profile/{{ account.username}}">
        <div class="account">
        <div><h3>{{ account.name }}</h3></div>
        <div class="profile-picture" style="background-image:url('{{ account.profile_pic_url}}')">
        </div>
        <div><a href="/logout">logout</a></div>
        </div>
      </a>
    </div>
    {{else}}
    <div class="links" style="padding:15px">
      <div><a href="/">Home</a></div>
      <div><a href="/register">Become an Organization</a></div>
      <div><a href="/register">Sign Up</a></div>
      <div><a href="/login">Login</a></div>
    </div>
    {{/if}}
    </nav>
    
    <div id="feed">

      <div class="container">

          <div class="header">
            <h1>Manage Account</h1>
          </div>

          <div class="content">
            <div class="challenge-form">

              <div class="form-element" style="display:block">
                <h2>Name<span class="asterisk">*</span></h2>
                <!-- class changed from challenge-title -->
                <input type="text" name="name" class="name"></input>
              </div>

              <div class="form-element" style="display:block">
              <h2>Email<span class="asterisk">*</span></h2>
                <!-- class changed from challenge-description -->
                <input type="text" name="email"class="email"></input>
              </div>

              <div class="form-element" style="display:block">
                <h2>Location<span class="asterisk">*</span></h2>
                <!-- class changed from challenge-location -->
                <input type="text" class="location"></input>
              </div>

               <div class="form-element" style="display:block">
                <h2>Bio<span class="asterisk">*</span></h2>
                <!-- class changed from challenge-location -->
                <input type="text" class="bio"></input>

              <div class="button submit" id="edit-profile-button" value="submit"><h2>update</h2></div>

            </div>

            <div class="delete-form">
  
               <h3>Permanently delete my account</h3>

               <div class="button delete""><b>delete account</b></div>
            </div>
           
          </div>

          </div>
        </div>



      </body>
</html>
