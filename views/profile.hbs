<!DOCTYPE html>
<html>
  <head>
    <title>{{ user.name }} | Handprint</title>
    <link rel="stylesheet" href="/stylesheets/main.css" />
    <link rel="shortcut icon" href="favicon.png" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="/js/main.js"></script>
  </head>
  <body>

  	<nav>

  		<!-- Logo -->
  		<div class="logo">
  			<img src="favicon.png">
  		</div>

  		<!-- Links -->
  		<div class="links">
	  		<div><a href="/dashboard">dashboard</a></div>
	  		<div><a href="/help">help</a></div>
		  	<a href="/profile"><div class="account">
  				<div><h3>{{ user.name }}</h3></div>
  				<div class="profile-picture" style="background-image:url('{{ user.profile_pic_url}}')">
  				</div>
			</div></a>
  		</div>	

  	</nav>

  	<div class="container">

  		<div id="profile">
  		
	  		<div class="profile-header">
	  			<div class="profile-picture" style="background-image:url('{{ user.profile_pic_url}}')"></div>
	  			<div class="info">
	  				<h1>{{ user.name }}</h1>
	  				<h3 class="user-location">{{ user.location_name }}</h3>
		  			<p class="user-bio">{{ user.bio }}</p>
	  			</div>
	  			<div class="stats">
	  				<h2 class="user-level"><b>Level {{ user.level }}</b></h2>
	  				<h3 class="user-points">{{ user.points }} points</h3>
	  			</div>
	  		</div>

	  		<div class="challenges">
	  			{{#each challenges}}
	  			<div class="challenge">
	  				<h3>{{ title }}</h3>
	  				<p>{{ description }}</p>
	  				<p>Start Date: {{ start_date }}</p>
	  				<p>End Date: {{ end_date }}</p>
	  				<p>Location: {{ location }}</p>
	  				<p>Points: {{ points }}</p>
	  			</div>
	  			{{/each}}
	  		</div>

	  		<div class="friends">
	  			{{#each challenges}}
	  			<div class="friend">
	  				<h3>{{ name }}</h3>
	  				<img src="{{ profile_pic_url }}">
	  				<p>{{ level }}</p>
	  				<p>{{ points }}</p>
	  			</div>
	  			{{/each}}
		  		</div>
		  	</div>

		</div>
  		
  	</div>

  </body>
</html>
