<!DOCTYPE html>
<html>
  <head>
    <title>{{ user.name }} | Handprint</title>
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/base.css" />
    <link rel="stylesheet" href="/stylesheets/profile.css" />
    <link rel="shortcut icon" href="/favicon.png" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="/js/main.js"></script>
  </head>
  <body>

  	<nav>

  		<!-- Logo -->
  		<div class="logo">
  			<a href="/"><img src="/images/logo-white.png"></a>
  		</div>

  		<!-- Search -->
  		<!--<div class="search">
  			<img src="/images/search-white.png">
  			<input placeholder="Search for a challenge">
  		</div>-->

  		<!-- Links -->
  		<div class="links">
	  		<div><a href="/dashboard">dashboard</a></div>
		  	<a href="/users/{{ user.username}}"><div class="account">
  				<div><h3>{{ user.name }}</h3></div>
  				<div class="profile-picture" style="background-image:url('{{ user.profile_pic_url}}')">
  				</div>
			</div></a>
  		</div>	

  	</nav>

  	<div class="container">

  		<div id="profile">
  		
	  		<div class="profile-header" style="background: linear-gradient(45deg, rgba(61, 158, 223, 0.8), rgba(16, 102, 213, 0.8)), url('{{ user.cover_pic_url }}');background-size: cover;">
	  			<div class="container">
		  			<div class="profile-picture" style="background-image:url('{{ user.profile_pic_url}}')"></div>
		  			<div class="info">
		  				<h1 class="heavy">{{ user.name }}</h1>
		  				<h3 class="user-location">{{ user.location_name }}</h3>
			  			<p class="user-bio">{{ user.bio }}</p>
		  			</div>
		  			<div class="stats">
		  				<h2 class="user-level"><b>Level {{ user.level }}</b></h2>
		  				<h3 class="user-points">{{ user.points }} points</h3>
		  			</div>
		  		</div>
	  		</div>

	  		<div class="content">

			  	<div class="challenges">
		  			<h2>Challenges</h2>
		  			{{#each challenges}}
		  			<div class="challenge past-challenge">
		  				<div class="challenge-points">
		  					<h1>+ {{ points }}</h1>
		  				</div>
		  				<div class="challenge-info">
		  					<b><p>{{ title }}</p></b>
		  					<p>{{ description }}</p>
		  					<div class="challenge-tags">
		  						{{#each category_tags}}
		  						<div><p># {{ this }}</p></div>
		  						{{/each}}
		  					</div>
		  				</div>
		  			</div>
		  			{{/each}}
		  		</div>

		  		<div class="friends">
		  			<h2>Friends</h2>
		  			{{#each friends}}
		  			<a href="/users/{{username}}"><div class="friend" style="background:linear-gradient(0deg, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.1)), url('{{ profile_pic_url }}');background-size:cover">
		  				<b><p>{{ name }}</p></b>
		  			</div></a>
		  			{{/each}}
			  	</div>

	  		</div>
		</div>
  		
  	</div>

  </body>
</html>
