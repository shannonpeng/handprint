<!DOCTYPE html>
<html>
  <head>
    <title>{{ user.name }} | Handprint</title>
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro" rel="stylesheet">
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <link rel="stylesheet" href="/stylesheets/base.css" />
    <link rel="stylesheet" href="/stylesheets/profile.css" />
    <link rel="shortcut icon" href="/favicon.png" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="/js/main.js"></script>
  </head>
  <body>

  	<nav> 
        <!-- Logo -->
        <div class="logo">
          <a href="/"><img src="/images/logo-white.png"></a>
        </div>

        {{#if account}}
        <div class="links">
          <div><a href="/dashboard">dashboard</a></div>
          <a href="/profile/{{ account.username}}">
            <div class="account">
            <div><h3>{{ account.name }}</h3></div>
            <div class="profile-picture" style="background-image:url('{{ account.profile_pic_url}}')">
            </div>
            <div><a href="/logout">logout</a></div>
            </div>
          </a>
        </div>
        {{else}}
        <div class="links">
          <div><a href="/">Home</a></div>
          <div><a href="/register">Become an Organization</a></div>
          <div><a href="/register">Sign Up</a></div>
          <div><a href="/login">Login</a></div>
        </div>
        {{/if}}
        
    </nav>


  	<div class="container">

  		<div id="profile">
  		
	  		<div class="profile-header" style="background: linear-gradient(45deg, rgba(61, 158, 223, 0.8), rgba(16, 102, 213, 0.8)), url('{{ user.cover_pic_url }}');background-size: cover;">
	  			<div class="container">
		  			<div class="profile-picture" style="background-image:url('{{ user.profile_pic_url}}')"></div>
		  			<div class="info">
		  				<h1 class="heavy">{{ user.name }}</h1>
		  				<h3 class="user-location">{{ user.location }}</h3>
			  			<p class="user-bio">{{ user.bio }}</p>
		  			</div>
		  			<div class="stats">
		  				<h2 class="user-level"><b>Level {{ user.level }}</b></h2>
		  				<h3 class="user-points">{{ user.points }} points</h3>
		  			</div>
		  		</div>
	  		</div>

	  		<div class="content">

			  	<div class="challenges">
		  			<h2>Completed Challenges</h2>
		  			{{#each challenges}}
		  			<div class="challenge">
		  				<div class="challenge-points">
		  					<h1>+ {{ points }}</h1>
		  				</div>
		  				<div class="challenge-info">
		  					<b><p class="challenge-title">{{ title }}</p></b>
		  					<p>{{ description }}</p>
		  					<p class="challenge-location">{{ location_name }}</p>
		  					<p class="challenge-organization">posted by <a href="/profile/{{ organization.username }}">{{ organization.name }}</a></p>
		  					<p class="challenge-date">{{ start_date }} &mdash; {{ end_date }}</p>

		  					<div class="challenge-tags">
		  						{{#each category_tags}}
		  						<div><p># {{ this }}</p></div>
		  						{{/each}}
		  					</div>
		  				</div>
		  			</div>
		  			{{else}}
		  			<h3>{{ user.name }} has not yet completed any challenges.</h3>
		  			{{/each}}
		  		</div>

		  		<div class="friends">
		  			<h2>Friends</h2>
		  			{{#each friends}}
		  			<a href="/users/{{username}}"><div class="friend" style="background:linear-gradient(0deg, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.1)), url('{{ profile_pic_url }}');background-size:cover">
		  				<b><p>{{ name }}</p></b>
		  			</div></a>
		  			{{/each}}
			  	</div>

	  		</div>
		</div>
  		
  	</div>

  </body>
</html>
