<!DOCTYPE html>
<html>
  <head>
    <title>{{ org.name }} | Handprint</title>
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/base.css" />
    <link rel="stylesheet" href="/stylesheets/profile.css" />
    <link rel="shortcut icon" href="/favicon.png" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="/js/main.js"></script>
  </head>
  <body>

  	<nav>

  		<!-- Logo -->
  		<div class="logo">
  			<a href="/"><img src="/images/logo-white.png"></a>
  		</div>

  		<!-- Search -->
  		<!--<div class="search">
  			<img src="/images/search-white.png">
  			<input placeholder="Search for a challenge">
  		</div>-->

  		<!-- Links -->
  		<div class="links">
	  		<div><a href="/dashboard">dashboard</a></div>
		  	<a href="/users/{{ org.orgname }}"><div class="account">
  				<div><h3>{{ org.name }}</h3></div>
  				<div class="profile-picture" style="background-image:url('{{ org.profile_pic_url}}')">
  				</div>
			</div></a>
  		</div>	

  	</nav>

  	<div class="container">

  		<div id="profile">
  		
	  		<div class="profile-header" style="background: linear-gradient(45deg, rgba(61, 158, 223, 0.8), rgba(16, 102, 213, 0.8)), url('{{ org.cover_pic_url }}');background-size: cover;">
	  			<div class="container">
		  			<div class="profile-picture" style="background-image:url('{{ org.profile_pic_url}}')"></div>
		  			<div class="info">
		  				<h1 class="heavy">{{ org.name }}</h1>
		  				<h3 class="org-location">{{ org.location_name }}</h3>
			  			<p class="org-description">{{ org.description }}</p>
		  			</div>
		  		</div>
	  		</div>

	  		<div class="content">

			  	<div class="challenges">
		  			<h2>Challenges</h2>
		  			{{#each challenges}}
		  			<div class="challenge">
		  				<div class="challenge-points">
		  					<h1>+ {{ points }}</h1>
		  				</div>
		  				<div class="challenge-info">
		  					<b><p class="challenge-title">{{ title }}</p></b>
		  					<p>{{ description }}</p>
		  					<p class="challenge-location">{{ location_name }}</p>
		  					<p class="challenge-date">{{ start_date }} &mdash; {{ end_date }}</p>
		  					<div class="challenge-tags">
		  						{{#each category_tags}}
		  						<div><p># {{ this }}</p></div>
		  						{{/each}}
		  					</div>
		  				</div>
		  			</div>
		  			{{/each}}
		  		</div>

	  		</div>
		</div>
  		
  	</div>

  </body>
</html>
