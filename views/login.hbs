<!DOCTYPE html>
<html>
  <head>
    <title>Login | Handprint</title>
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/base.css" />
    <link rel="stylesheet" href="/stylesheets/login.css" />
    <link rel="shortcut icon" href="/favicon.png" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="/js/login.js"></script>
  </head>
  <body>  
    <body>
    <div id="navTab">
      <ul class="tab">
        <!-- javascript:void(0) keeps browser on same page -->
        <li><a href="javascript:void(0)" class="tablinks" 
          onclick="openForm(event, 'Volunteer')">Volunteer</a></li>
        <li><a href="javascript:void(0)" class="tablinks" 
          onclick="openForm(event, 'Organization')">Organization</a></li>
      </ul>
    </div>

    <div id="Volunteer" class="tabcontent">
      <form name="volunteerLogin" method="post" action="/login/user">
        Username*:<br>
        <input type="text" name="username" required><br>
        Password*:<br>
        <input type="text" name="password" required></br>
        <input type="submit" class="submit">
      </form>
    </div>

    <div id="Organization" class="tabcontent">
      <form name="orgLogin" method="post" action="/login/organization">
        Email*:<br>
        <input type="text" name="email" required></br>
        Password*:<br>
        <input type="text" name="password" required></br>
        <input type="submit" value="submit">
      </form>
    </div>
  </body>
</html>
