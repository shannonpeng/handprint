<!DOCTYPE html>
<html>
  <head>
    <title>Handprint | Gamifying Volunteering</title>
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro" rel="stylesheet">
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <link rel="stylesheet" href="/stylesheets/base.css" />
    <link rel="stylesheet" href="/stylesheets/index.css" />
    <link rel="shortcut icon" href="/favicon.png" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="/js/main.js"></script>
  </head>
  <body>

     <!--{{>navbar}}-->
     <nav> 
    <!-- Logo -->
    <div class="logo">
      <a href="/"><img src="/images/logo-white.png"></a>
    </div>

    <!-- Search -->
    <form name="search" method="POST" action="/search">
      <div class="search">
        <img src="/images/search-white.png">
        <input class="input-search" name="searchItem" placeholder="Search for users and organizations">
      </div>
    </form>

    {{#if account}}
    <div class="links">
      <div><a href="/dashboard">dashboard</a></div>
      <a href="/profile/{{ account.username}}">
        <div class="account">
        <div><h3>{{ account.name }}</h3></div>
        <div class="profile-picture" style="background-image:url('{{ account.profile_pic_url}}')">
        </div>
        <div><a href="/logout">logout</a></div>
        </div>
      </a>
    </div>
    {{else}}
    <div class="links" style="padding:15px">
      <div><a href="/">Home</a></div>
      <div><a href="/register">Become an Organization</a></div>
      <div><a href="/register">Sign Up</a></div>
      <div><a href="/login">Login</a></div>
    </div>
    {{/if}}
    </nav>

    <div id="carousel">
      <div class="content">
        <h1>Become a Handprint <b>volunteer.</b></h1>
        <h3>Join your friends in helping your community.</h3>
        <a href="/register"><div class="button">Start Your Journey</div></a>
      </div>
    </div>

    <div class="container">

      <div class="activities">
        <ul>
          <li> Plant trees </li>
          <li> Distribute meals </li>
          <li> Build a home </li>
          <li> Clean the beach </li>
        </ul>
      </div>

      <div class="blurb">
        <h3>Earn points, level up, and challenge your friends &mdash; and at the same time, give back to your local communities.</h3>
      </div>

      <div class="organizations">
        <h2>Connect to volunteer organizations</h2>
        {{#each organizations}}
            <a href="/profile/{{ username }}">
              <div class="organization">
              <div class="organization-pic" style="background-image:url('{{ profile_pic_url }}')"></div>
              <b><p>{{ name }}</p></b>
              <p>{{ location_name }}</p>
              </div>
            </a>
        {{else}}
            <h3>No organizations are currently in the database.</h3>
        {{/each}}
          </div>
      </div>

    </div>
  
  </body>
</html>
