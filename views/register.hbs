<!DOCTYPE html>
<html>
  <head>
    <title>Sign Up | Handprint</title>
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/base.css"/>
    <link rel="stylesheet" href="/stylesheets/register.css"/>
    <link rel="shortcut icon" href="/favicon.png" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="/js/register.js"></script>
  </head>
  <body>

    <!--{{>navbar}}-->
    <nav> 
    <!-- Logo -->
    <div class="logo">
      <a href="/"><img src="/images/logo-white.png"></a>
    </div>

    <!-- Search -->
    <!-- can't access search if not registered
    <form name="search" method="POST" action="/search">
      <div class="search">
        <img src="/images/search-white.png">
        <input class="input-search" name="searchItem" placeholder="Search for users and organizations">
      </div>
    </form>
    -->

    {{#if account}}
    <div class="links">
      <div><a href="/dashboard">dashboard</a></div>
      <a href="/profile/{{ account.username}}">
        <div class="account">
        <div><h3>{{ account.name }}</h3></div>
        <div class="profile-picture" style="background-image:url('{{ account.profile_pic_url}}')">
        </div>
        <div><a href="/logout">logout</a></div>
        </div>
      </a>
    </div>
    {{else}}
    <div class="links" style="padding:15px">
      <div><a href="/">Home</a></div>
      <div><a href="/register">Become an Organization</a></div>
      <div><a href="/register">Sign Up</a></div>
      <div><a href="/login">Login</a></div>
    </div>
    {{/if}}
    </nav>

    <div class="header">
      <div class="logo"><img src="/images/logo-white.png"></div>
      <h1>Sign Up</h1>
    </div>

    {{#if message}}
    <h2 class="message">{{ message }}</h2>
    {{/if}}

    <div id="reg-form">
      <form name="register" method="post" action="/register">
        <p>Are you a volunteer or organization?<span class="asterisk">*</span></p>
        <div class="radio"><input type="radio" name="mode" class="mode" value="volunteer"><p>Volunteer</p></div>
        <div class="radio"><input type="radio" name="mode" class="mode" value="organization"><p>Organization</p></div>
        <div class="divider"></div>
        <p>Username<span class="asterisk">*</span></p>
        <input type="text" name="username" class="username" placeholder="tim" required>
        <p>Name<span class="asterisk">*</span></p>
        <input type="text" name="name" class="name" placeholder="Tim Beaver" required>
        <p>Email<span class="asterisk">*</span></p>
        <input type="text" name="email" class="email" placeholder="tim@mit.edu" required>
        <p>Password<span class="asterisk">*</span></p>
        <input type="password" name="password" class="password" placeholder="Password" required>
        <p>Location<span class="asterisk">*</span></p>
        <input type="text" name="location" class="location" placeholder="Cambridge, MA" required>
        <p>Bio</p>
        <input type="text" name="bio" class="bio" placeholder="Hello! I'm Tim Beaver.">
        <input type="submit" value="Submit" class="button submit">
      </form>
    </div>
   
    </div>
    </div>
  </body>
</html>
